.main-content-wrapper
  .leader-board-table{"ng-controller"=>"LeaderboardController", "ng-cloak"=>""}
    .leader-board-header.ib-container.bottom-align.relative<
      .ib-col-8>
        %span> Foosballer
      .ib-col-4.stats-list>
        %a{"ng-cloak"=>"", "ng-click"=>"showStatDropdown = !showStatDropdown"}>
          %span> {{ currentStatHeaderTitle() }}
        %ul.no-list-style{"ng-class"=>"{open: showStatDropdown}"}>
          %li{"ng-cloak"=>"", "ng-repeat"=>"stat in possibleStats()"}<
            %a{"ng-click"=>"changeDisplayedStat(stat)", "ng-class"=>"{selected: stat == displayedStat}"}>
              %span>{{ statLabel(stat) }}

    %ul.no-list-style.leader-board-list
      %li{"ng-repeat"=>"player in players() | orderBy: rank"}
        .player.container
          .rank{"rank"=>"{{ rank(player) }}"} {{ rank(player) }}
          .col-xs-8
            %span {{ player.name }}
          .col-xs-4
            %span {{ currentStatDisplay(player) }}
